<%- include('partials/header') %> 

<main class="main login">

    <h2 class="login__title">Connexion</h2>

    <% if (locals.error) { %>
        <p class="login__error"><%= error %> </p>
    <% } %>

    <form class="login__form" action="/login" method="post">
        <label class="login__form__label" for="pseudo">Identifiant</label>
        <input class="login__form__input" type="text" name="pseudo" id="pseudo">

        <label class="login__form__label" for="password">Mot de passe</label>
        <input class="login__form__input" type="password" name="password" id="password">

        <input class="login__form__input" type="submit" value="Valider">
    </form>

    <a class="login__link" href="/">Retour au site</a>
    
</main>

<%- include('partials/footer') %> 